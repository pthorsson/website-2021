{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018", "dom"],
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "./build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
